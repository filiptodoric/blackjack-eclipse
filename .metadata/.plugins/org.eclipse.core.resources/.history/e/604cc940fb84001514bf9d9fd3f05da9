<script>
var newDeck = [];
var usedCards = [];
var deckIndex = 0;

for (var x = 0; x <= 3; x++)  {
  for (var i = 1; i < 14; i++)  {
    newDeck[deckIndex] = i;
    deckIndex++
  }
}

console.dir("Unmodified deck");
console.dir(newDeck);
function shuffle(array){
    for(var j, x, i = o.length; i; j = Math.floor(Math.random() * i), x = o[--i], o[i] = o[j], o[j] = x);
    return array;
}

var deck = shuffle(newDeck);

console.dir("Shuffled deck");
console.dir(deck);
</script>
