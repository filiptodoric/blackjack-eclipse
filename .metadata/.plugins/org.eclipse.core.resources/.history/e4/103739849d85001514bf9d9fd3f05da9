<script>

	var index = -1;
	var deck = getDeck();
	
	function deal() {
		index++
		return deck[index];
	}

	function change() {
		var card = deal();
		index++;
		$("#dealer-cards").html(card);
	}
	
	var player1_hand = new Array();
	player1_hand[0] = deal();
	player1_hand[1] = deal();

	
	function hit(hand)	{
		hand[hand.length] = deal();
		console.dir(player1_hand);	
	}


	
	
	
</script>
<body>
<h1>Blackjack</h1>
  <div id="dealer">Dealer
  	<h3>Dealer Cards:</h3>
  	<button onclick="hit(player1_hand)">Hit</button>
